{
    "version": "2.0.2",
    "compilerOptions": {
        "lib": ["es5", "es2015.promise", "dom", "es2015"],
        "target": "es2015",
        "typeRoots": [
          "node_modules/@types"
        ],
        "sourceRoot": "src",
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "sourceMap": true,
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
  }
  